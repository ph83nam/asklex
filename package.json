        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "chai": "^3.5.0",
        "chai-as-promised": "^6.0.0",
        "coffee-script": "1.12.4",
        "coveralls": "^2.13.1",
