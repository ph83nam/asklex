        "hiredis": "^0.5.0",
        "redis": "^2.7.1",
        "request": "^2.81.0",
        "uuid": "^3.1.0"
    },
    "scripts": {
        "test": "npm run lint && npm run coveralls",
        "lint": "eslint lib messenger takeaway users test --cache",
        "coveralls": "nyc --reporter=lcov --reporter=text _mocha --compilers js:babel-core/register -- test/** && cat coverage/lcov.info | coveralls",
        "unit": "nyc mocha --compilers js:babel-core/register -- test/**",
        "debug": "node-debug -c -p 3031 sls offline start"
    },
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "lines": 60,
        "statements": 60,
        "functions": 60,
        "branches": 50,
        "include": [
            "lib/**/*.js",
            "messenger/**/*.js",
            "takeaway/**/*.js",
            "users/**/*.js"
        ],
        "exclude": [
            "**/*.spec.js",
            "build"
        ]
    },
    "license": "MIT"
